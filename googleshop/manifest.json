{
  "manifest_version": 3,
  "name": "App Packaging Helper",
  "version": "1.0.2",
  "description": "Helps IT professionals analyze and package software installers for deployment",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "downloads"
  ],
  "host_permissions": [
    "http://localhost:3001/*",
    "https://*/*"
  ],
  "background": {
    "service_worker": "service-worker-v2.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
