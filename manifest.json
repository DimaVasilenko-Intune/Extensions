{
  "manifest_version": 3,
  "name": "App Packaging Helper",
  "version": "2.0.1",
  "description": "Helps IT admins find installer files and packaging information from vendor websites",
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_title": "App Packaging Helper"
  },
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "src/background/service-worker.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content/content.js"],
      "run_at": "document_idle"
    }
  ]
}
