{
  "manifest_version": 3,
  "name": "App Packaging Helper",
  "version": "3.0.0",
  "description": "Helps IT admins package applications by detecting installers and generating packaging information",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "downloads"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "service-worker.js"
  },
  "action": {
    "default_popup": "src/popup/popup.html"
  }
}
